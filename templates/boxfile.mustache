web1:
  ports:
    - http:80:8080
    - http:443:8080
{{#apache}}
{{#fpm}}
  exec:
    fpm: {{data_dir}}/sbin/php-fpm -y {{etc_dir}}/php/php-fpm.conf -c {{etc_dir}}/php/php.ini
    apache: {{data_dir}}/sbin/httpd -DNO_DETACH
{{/fpm}}
{{#mod_php}}
  exec: {{data_dir}}/sbin/httpd -DNO_DETACH
{{/mod_php}}
  log_watch:
    apache[access]: {{data_dir}}/var/log/apache/access.log
    apache[error]: {{data_dir}}/var/log/apache/error.log
    php[error]: {{data_dir}}/var/log/php/php_error.log
{{#fpm}}
    php[fpm]: {{data_dir}}/var/log/php/php_fpm.log
{{/fpm}}
{{/apache}}
{{#nginx}}
  exec:
    fpm: {{data_dir}}/sbin/php-fpm -y {{etc_dir}}/php/php-fpm.conf -c {{etc_dir}}/php/php.ini
    nginx: {{data_dir}}/sbin/nginx
  log_watch:
    nginx[access]: {{data_dir}}/var/log/nginx/access.log
    nginx[error]: {{data_dir}}/var/log/nginx/error.log
    php[error]: {{data_dir}}/var/log/php/php_error.log
    php[fpm]: {{data_dir}}/var/log/php/php_fpm.log
{{/nginx}}
{{#builtin}}
  exec: {{data_dir}}/bin/php -S 0.0.0.0:8080 -c {{etc_dir}}/php/php.ini -t {{code_dir}}{{document_root}}/
  log_watch:
    php[access]: {{data_dir}}/var/log/php/access.log
    php[error]: {{data_dir}}/var/log/php/php_error.log
{{/builtin}}