#!/bin/bash
# -*- mode: bash; tab-width: 2; -*-
# vim: ts=2 sw=2 ft=bash noet

# source the Nos framework
. /opt/nanobox/nos/common.sh

# initialize Nos with the original arguments
nos_init "$@"

# source common lib, where the helpers are defined
. ${engine_lib_dir}/php.sh

# install php interpreter, webservers, extensions, etc
install_runtime_packages

# configure php.ini
configure_php

# configure php extensions
configure_extensions

# configure apache or nginx
configure_webserver

# # configure the newrelic monitoring agent
# configure_newrelic

composer_dir

persist_composer_bin_to_path

copy_cached_files

composer_install

save_cached_files

# if nodejs is required, we have a bit more setup to do
if [[ "$(is_nodejs_required)" = "true" ]]; then
  # add node_modules/.bin to the PATH
  persist_npm_bin_to_path

  # run npm rebuild only if the runtime has changed
  npm_rebuild

  # run npm install
  npm_install

  # run npm prune
  npm_prune

  # set the node.js runtime in cache
  nodejs_persist_runtime
fi

exit 0
