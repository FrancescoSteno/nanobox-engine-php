#!/bin/bash

# source the Nos framework
. /opt/nos/common.sh

# initialize Nos with the original arguments
nos_init $@

# source common lib
. ${engine_lib_dir}/common.sh

install_runtime
install_php_extensions
install_webserver
install_composer
install_js_runtime

persist_evars

configure_webserver
configure_php_fpm
configure_php
configure_newrelic

composer_install
